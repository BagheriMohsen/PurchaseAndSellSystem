<table  id="warehouseInOutTable" class="table table-striped table-bordered table-sm" cellspacing="0"
        width="100%">
        <thead>
            <tr class="text-center">
            <th>محصول</th>
            <th>تعداد</th>
            <th>ورودی-خروجی</th>
            <th >تاریخ ورود</th>
            <th >تاریخ خروج</th>
            </tr>
        </thead>
        <tbody>
        {% for storeRoom in storeRooms %}
        <tr class="text-center">
            <td>{{storeRoom.product.name}}</td>
            <td>{{storeRoom.number}}</td>
            <td>
                {% if storeRoom.description is not null %}
                    {{storeRoom.description}}
                {% else %}
                    {{'توضیحات ندارد'}}
                {% endif %}
            </td>
            <td>{{storeRoom.created_at|date('Y-m-d')}}</td>
            <td>{{storeRoom.out_date}}</td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <ul>
            {{ storeRooms | raw }}
        </ul>
    </tfoot>
</table>
