{% extends 'Admin/Master/layout' %}

{% block title %}
  محصول جدید
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="{{asset('AdminPanel/check-box/checkboxes.min.css')}}">
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'محصول جدید'} %}
{% endblock %}


{% block content %}

  {% include 'Messages/message' %}
  {% include 'Messages/errors' %}


  <form id="productCreateForm" action="{{route('products.store')}}" method="post" class="row bg-white pt-2 pb-3" enctype="multipart/form-data">
    <div class="row mx-5">
      <input name="_token" type="hidden" value="{{ csrf_token() }}" />

      {# عنوان کالا #}
      <div class="col-sm-6 mt-3 px-5">
        <label for="name">عنوان کالا
          <span class="text-danger">*</span>
        </label>
        <input value="{{old('name')}}" class="form-control" type="text" placeholder="" name="name" required>
      </div>
      {# عنوان کالا #}

      {# کد کالا #}
      <div class="col-sm-6 mt-3 px-5">
        <label for="code">کد کالا
          <span class="text-danger">*</span>
        </label>
        <input value="{{old("code")}}" class="form-control" type="text" placeholder=""name="code">
      </div>
      {# کد کالا #}

      {# قیمت محصول #}
      <div class="col-sm-6 mt-4 px-5">
        <label for="price"> قیمت محصول - تومان
          <span class="text-danger">*</span>
        </label>
        <input value="{{old("price")}}" class="form-control comma" type="text" placeholder=""name="price" required>
      </div>
      {# قیمت محصول #}

      {# قیمت خرید #}
      <div class="col-sm-6 mt-4 px-5">
        <label for="phone-number"> قیمت خرید - تومان
          <span class="text-danger">*</span>
        </label>
        <input value="{{old("buyPrice")}}" class="form-control comma" type="text" placeholder=""name="buyPrice" required>
      </div>
      {# قیمت خرید #}

      {# تصویر محصول #}
      <div class="col-sm-6 mt-4 px-5">
        <label for="image">تصویر محصول</label>
        <input value="{{old("image")}}" class="form-control border-0" type="file" placeholder="" name="image">
      </div>
      {# تصویر محصول #}

      {# وضعیت #}
      <div class="col-sm-3 mt-4 px-5">
        <h6>وضعیت
        </h6>
        <div class="ckbx-style-11">
          <input {% if old("status") != null %} checked {% endif %} type="checkbox" id="ckbx-style-11-1" value="active" name="status" checked>
          <label for="ckbx-style-11-1"></label>
        </div>
      </div>
      {# وضعیت #}

      {# ارسال پیامک #}
      <div class="col-sm-3 mt-4 px-5">
        <h6>ارسال پیامک
        </h6>
        <div class="ckbx-style-11">
          <input {% if old("message") != null %} checked {% endif %} type="checkbox" id="ckbx-style-12-1" value="active" name="message" checked>
          <label for="ckbx-style-12-1"></label>
        </div>
      </div>
      {# ارسال پیامک #}

      {# توضیحات #}
      <div class="col-sm-6 mt-4 px-5">
        <label for="description">توضیحات محصول</label>
        <textarea class="col-12" name="description" placeholder="توضیحات این محصول را وارد کنید" rows="8" cols="80">{{old('description' | raw)}}</textarea>
      </div>
      {# توضیحات #}

      <div class="col-12 text-center mt-5">
        <button class="btn btn-info" type="submit" name="button">
          <strong class="text-light">
            ثبت محصول
          </strong>
        </button>
      </div>
    </div>
  </form>

{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}
