{% extends 'Admin/Master/layout' %}

{% block title %}
  محصول جدید
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="{{asset('AdminPanel/check-box/checkboxes.min.css')}}">
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' %}
{% endblock %}


{% block content %}

  {% include 'Messages/message' %}
  {% include 'Messages/errors' %}


  <form action="{{route('products.store')}}" method="post" class="row bg-white pt-2 pb-3" enctype="multipart/form-data">
      <input name="_token" type="hidden" value="{{ csrf_token() }}" />
    {# عنوان کالا #}
    <div class="col-sm-4 mt-5">
      <label for="phone-number">عنوان کالا
        <span class="text-danger">*</span>
      </label>
      <input value="{{old('name')}}" class="form-control bg-sec" type="text" placeholder="" name="name" >
    </div>
    {# عنوان کالا #}
    {# کد کالا #}
    <div class="col-sm-4 mt-5">
      <label for="phone-number">کد کالا
        <span class="text-danger">*</span>
      </label>
      <input value="{{old("code")}}" class="form-control bg-sec" type="text" placeholder=""name="code"  >
    </div>
    {# کد کالاا #}
    {# تصویر محصول #}
    <div class="col-sm-4 mt-5">
      <label for="phone-number">تصویر محصول
        <span class="text-danger">*</span>
      </label>
      <input value="{{old("image")}}" class="form-control bg-sec" type="file" placeholder="" name="image" >
    </div>
    {# تصویر محصول #}
    {# قیمت محصول #}
    <div class="col-sm-6 mt-5">
      <label for="phone-number">قیمت محصول
        <span class="text-danger">*</span>
      </label>
      <input value="{{old("price")}}" class="form-control bg-sec" type="text" placeholder=""name="price">
    </div>
    {# قیمت محصول #}
    {# قیمت خرید #}
    <div class="col-sm-4 mt-5">
      <label for="phone-number">قیمت خرید
        <span class="text-danger">*</span>
      </label>
      <input value="{{old("buyPrice")}}" class="form-control bg-sec" type="text" placeholder=""name="buyPrice" >
    </div>
    {# قیمت خرید #}
    <div class="col-sm-4">
      <div class="container-fluid">
        <div class="row">
          {# وضعیت #}
          <div class="col-sm-12 mt-5">
            <h6>وضعیت
              <span class="text-danger">*</span>
            </h6>
            <div class="ckbx-style-11">
                <input {% if old("status") != null %} checked {% endif %} type="checkbox" id="ckbx-style-11-1" value="active" name="status">
                <label for="ckbx-style-11-1"></label>
            </div>
          </div>
          {# وضعیت #}
          {# ارسال پیامک #}
          <div class="col-sm-12 mt-5">
            <h6>ارسال پیامک
              <span class="text-danger">*</span>
            </h6>
            <div class="ckbx-style-11">
                <input {% if old("message") != null %} checked {% endif %} type="checkbox" id="ckbx-style-12-1" value="active" name="message">
                <label for="ckbx-style-12-1"></label>
            </div>
          </div>
          {# ارسال پیامک #}
        </div>
      </div>
    </div>
    {# توضیحات #}
    <div class="col-sm-7 mx-auto mt-5">
      <label for="description">توضیحات محصول</label>
      <textarea class="col-12" name="description" placeholder="توضیحات این محصول را وارد کنید" rows="8" cols="80">{{old('description' | raw)}}</textarea>
    </div>
    {# توضیحات #}
    <div class="col-12 text-center mt-5">
      <button class="btn btn-success col-2 btn-sm" type="submit" name="button">
        <strong class="h6 text-dark">
            ثبت محصول
        </strong>
      </button>
    </div>


  </form>

{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}
