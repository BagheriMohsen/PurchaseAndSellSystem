{% extends 'Admin/Master/layout' %}

{% block title %}
  محصولات
{% endblock %}

{% block styles %}
  <link href=""
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'محصولات'} %}
{% endblock %}

{% block content %}

      {% include 'Messages/message' %}

                <a class="btn btn-success btn-sm mb-2" href="{{route('products.create')}}">
                  <strong class="h6 text-dark">
                    افزودن محصول
                  </strong>
                </a>
                <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
                width="100%">
                  <thead>
                  <tr class="text-center">
                    <th>تصویر</th>
                    <th>نام</th>
                    <th>کد محصول</th>
                    <th>وضعیت</th>
                    <th>وضعیت پیامک</th>
                    <th>قیمت</th>
                    <th>قیمت خرید</th>
                    <th>عملیات</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for product in products %}
                    <tr class="text-center">
                      <td>
                        <img src="{{ product.thumbUrl }}" alt="">
                      </td>
                      <td>{{product.name}}</td>
                      <td>{{product.code}}</td>
                        {% if product.status != null %}
                          <td class="text-success" >{{'فعال'}}</td>
                        {% else %}
                          <td class="text-danger" >{{'غیر فعال'}}</td>
                        {% endif %}
                        {% if product.messageStatus != null %}
                          <td class="text-success" >{{'فعال'}}</td>
                        {% else %}
                          <td class="text-danger" >{{'غیر فعال'}}</td>
                        {% endif %}
                      <td>{{product.price}}</td>
                      <td>{{product.buyPrice}}</td>
                      <td>
                        <a title="انواع" class="text-success" data-toggle="modal" href="#types{{product.id}}">
                          <sub class="text-success">
                            {{product.types.count()}}
                          </sub>
                          <i class="fas fa-plus crud-icon"></i>
                        </a>
                        <a  title="ویرایش" class="text-warning " href="{{route('products.edit',product.slug)}}">
                          <i class="far fa-edit crud-icon"></i>
                        </a>
                        <a  title="تخفیفات" class="text-primary" href="{{route('products.off',product.slug)}}">
                          <i class="fas fa-tags crud-icon"></i>
                        </a>
                        
                        {# Form Delete #}
                          <form action="{{route('products.destroy',product.id)}}" id="formForDelete"  method="POST">
                              <input type="hidden" name="_token" value="{{ csrf_token() }}" />
                              <input type="hidden" name="_method" value="DELETE" />
                            <a title="حذف" href="javascript:{}" 
                              onclick="document.getElementById('formForDelete').submit();" >
                              <i class="far fa-trash-alt text-danger crud-icon"></i>
                            </a>
                          </form>
                        {# Form Delete #}
                        
                      </td>
                    </tr>
                {% endfor %}
                  </tbody>

                </table>


{# delete product #}
{% for product in products %}
<!-- The Modal -->
<div class="modal fade " id="types{{product.id}}">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header ">

        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-center ">
        <table  id="example2" class="table table-bordered table-striped bg-white pt-2 pb-2">
          <thead>
            <tr class="text-center">
              <th>نوع محصول</th>
              <th>عملیات</th>
            </tr>
          </thead>
          <tbody>
          {% for type in product.types %}
            <tr class="text-center">
              <td>{{type.name}}</td>
              <td>
                <a  class="text-warning btn-sm" href="#">
                  <i class="far fa-edit crud-icon"></i>
                </a>
                {# Form Delete #}
                  <form action="{{ route('types.destroy',type.id) }}" id="formForDelete"  method="POST">
                      <input type="hidden" name="_token"  value="{{ csrf_token() }}" />
                      <input type="hidden" name="_method" value="DELETE" />
                    <a href="javascript:{}" 
                      onclick="document.getElementById('formForDelete').submit();" >
                      <i class="far fa-trash-alt text-danger crud-icon"></i>
                    </a>
                  </form>
                {# Form Delete #}
              </td>
            </tr>
        {% endfor %}
          </tbody>

        </table>
        <form action="{{route('types.store')}}" method="post">
          <input type="hidden" name="_token" value="{{ csrf_token() }}" />
          <div class="input-group mb-3">
            <input type="text" class="form-control" name="name" placeholder="نوع محصول را وارد کنید" required>
            <input type="hidden" name="product" value="{{product.id}}">
            <div class="input-group-append">
              <button type="submit" class="input-group-text text-success">
                  <i class="far fa-plus-square crud-icon"></i>
              </button>
            </div>
          </div>
        </form>

      </div>


    </div>
  </div>
</div>

</div>
{% endfor %}
