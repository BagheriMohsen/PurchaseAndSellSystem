{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'لیست هزینه ها'} %}
{% endblock %}

{% block content %}

{% include 'Messages/message' %}
{% include 'Messages/info' %}


<div class="row">
  <div class="card col-sm-12 p-3">

      

      <table   class="table table-striped table-bordered table-sm text-center" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>نام و نام خانوادگی</th>
            <th>استان-شهر</th>
            <th>تاریخ</th>
            <th>مبلغ</th>
            {# <th>نوع پرداخت</th> #}
            {# <th>صورت حساب</th> #}
            <th>توضیحات</th>
            <th>عملیات </th>
          </tr>
        </thead>
        <tbody>
        {# {% for order in orders %} #}
        {% for cost in costs %}
          <tr>
            <td>{{cost.user.name}}{{' '}}{{cost.user.family}}</td>
            <td>{{cost.user.state.name}}{{'-'}}{{cost.user.city.name}}</td>
            <td class="justDate">{{cost.billDate}}</td>
            <td>{{cost.bill | number_format}}</td>
            <td>{{cost.billDesc}}</td>
            <td>
                <a  title="پذیرفتن" class="text-success"
                    href="{{route('userInventory.AgentCostConfirm',cost.id)}}">
                    <i class="far fa-check-square text-success crud-icon"></i>
                </a>
                <a  title="نپذیرفتن" class="text-success"
                    href="{{route('userInventory.RejectCost',cost.id)}}">
                    <i class="far fa-window-close text-danger crud-icon"></i>
                </a>
            </td>
          </tr>
          {% endfor %}
          {# {% endfor %} #}
        </tbody>
      </table>
      <div class="col-12">
