{% extends 'Admin/Master/layout' %}

{% block title %}
  لیست هزینه ها
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'لیست هزینه ها'} %}
{% endblock %}

{% block content %}

{% include 'Messages/message' %}
{% include 'Messages/info' %}


<div class="row">
  <div class="card col-sm-12 p-3">

      <div class="row p-4">
        <button class="btn btn-info btn-sm" type="button" data-toggle="modal" href="#cost">
            <strong class="text-dark h6">
              ثبت هزینه
            </strong>
          </button>
      </div>


      <table   class="table table-striped table-bordered table-sm text-center" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>نام و نام خانوادگی</th>
            <th>استان-شهر</th>
            <th>تاریخ</th>
            <th>مبلغ</th>
            {# <th>نوع پرداخت</th> #}
            {# <th>صورت حساب</th> #}
            <th>توضیحات</th>
            <th>عملیات </th>
          </tr>
        </thead>
        <tbody>
        {# {% for order in orders %} #}
        {% for cost in costs %}
          <tr>
            <td>{{cost.user.name}}{{' '}}{{cost.user.family}}</td>
            <td>{{cost.user.state.name}}{{'-'}}{{cost.user.city.name}}</td>
            <td class="justDate">{{cost.create_date}}</td>
            <td>{{cost.price | number_format}}</td>
            <td>{{cost.desc}}</td>
            <td>
                <a  class="btn btn-success btn-sm text-dark"
                    href="{{route('userInventory.AgentCostConfirm',cost.id)}}">
                    <strong class="h6">
                        تایید 
                    </strong>
                    <i class="fas fa-check crud-icon"></i>
                </a>
            </td>
          </tr>
          {% endfor %}
          {# {% endfor %} #}
        </tbody>
      </table>
      <div class="col-12">
      {# <form class="" action="" method="post" id=""> 
        <button class="btn btn-default" type="submit">
          <strong class="">
            تایید پرداخت  
          </strong>
        </button>
      </form> #}
    </div>
    </div>
  </div>
</div>











{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}