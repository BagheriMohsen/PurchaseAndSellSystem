{% extends 'Admin/Master/layout' %}

{% block title %}
  پرداخت سفارشات
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'پرداخت سفارشات'} %}
{% endblock %}

{% block content %}

<div class="row">
  <div class="card col-sm-12">
    <div class="card-body col-12 mx-auto">
      <div class="col-12">
        <button class="btn btn-info" type="button" data-toggle="modal" href="#pay">
          <strong class="">
          ثبت پرداخت
          </strong>
        </button>
        <form class="" action="" method="post" id=""> 
          <button class="btn btn-default" type="submit" data-toggle="modal" href="#">
            <strong class="">
          افزودن به لیست پیش سفارشات
            </strong>
          </button>
        </form>
        
      </div>
      <table  id="orderTable" class="table table-striped table-bordered table-sm text-center" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th></th>
            <th>شماره<br> سفارش</th>
            <th>تاریخ ثبت</th>
            <th>تاریخ تخصیص</th>
            <th>استان-شهر</th>
            <th>کد پستی</th>
            <th>نام خریدار</th>
            <th>همراه-ثابت</th>
            <th>نوع پرداخت</th>
            <th>کالسنتر</th>
            <th>عملیات</th>
          </tr>
        </thead>
        <tbody>
        {% for order in orders %}
          <tr>
            <td></td>
            <td>{{order.id}}</td>
            <td class="timestamp">{{order.created_at | date('Y-m-d')}}</td>
            <td>{{'-'}}</td>
            <td>{{order.state.name}}{{'-'}}{{order.city.name}}</td>
            <td>{{order.postalCode}}</td>
            <td>{{order.fullName}}</td>
            <td>{{order.mobile}}<br>{{order.telephone}}</td>
            {% if order.paymentMethod == 'cash' %}
              <td>{{'نقدی'}}</td>
            {% else %}
              <td>{{'غیر نقدی'}}</td>
            {% endif %}
            <td>{{''}}</td>
            <td>
              <a title="جزئیات این سفارش" class="text-secondary" data-toggle="modal" href="#order{{order.id}}">
                <sub class="text-dark">
                  {{order.products.count()}}
                </sub>
                <i class="fas fa-shopping-basket crud-icon"></i>
              </a>
              <a title="فاکتور" class="text-secondary" href="{{route('orders.Factor',order.id)}}"
              target="_blank">
                <i class="fa fa-book crud-icon"></i>
              </a>
               {#<a title="تعیین وضعیت" class="text-secondary" data-toggle="modal" href="#condition">
                  <i class="fa fa-cogs crud-icon"></i>
              </a> #}
              {# <a  title="ویرایش" class="text-warning mx-auto"
                href="#">
                <i class="far fa-edit crud-icon"></i>
              </a> #}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>


<!-- Pay orders modal -->
<div class="modal fade" id="pay">
  <div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header bg-info space-content-between flex-row-reverse p-2">
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
        <span class="p-1">پرداخت سفارش</span>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="container">
         <form class="row label-light" method="post" id="payOrders">
          <div class="col-sm-6 mt-3">
            <label for="mobile">مبلغ-تومان
              <span class="text-danger">*</span>
            </label>
            <input class="form-control comma" type="text" name="bill" value="" required>
          </div>
          <div class="col-sm-6 mt-3">
            <label for="date">تاریخ
              <span class="text-danger">*</span>
            </label>
            <input class="form-control persianDatePicker" type="text" name="date" value="" required autocomplete="off">
          </div>
          <div class="col-sm-12 mt-3">
            <label for="tracingCode">کد (کد پیگیری-شماره مرجع-شماره بازاریابی-شماره سند-شماره پیگیری پایا)
              <span class="text-danger">*</span>
            </label>
            <input class="form-control comma" type="text" name="tracingCode" value="" required>
          </div>
          <div class="col-sm-12 mt-3">
            <label for="bankAccount">شماره حساب
              <span class="text-danger">*</span>
            </label>
            <select id="state" class="form-control"  name="bankAccount" required>
              <option value="{{null}}">انتخاب کنید</option>
            </select>
          </div>
          <div class="col-sm-6 mt-3">
            <input class=" bg-sec" type="radio"  name="paymentMethod" value="card" checked>
            <label for="paymentMethod">ثبت فیش
            </label>
            <br />
            <input class=" bg-sec" type="radio" name="paymentMethod" value="online" >
            <label for="paymentMethod">آنلاین
            </label>
          </div>
          <div class="col-sm-6 mt-3">
            <label for="image">تصویر محصول</label>
            <input value="" class="form-control border-0" type="file" placeholder="" name="image">
          </div>
          <div class="col-sm-12 mt-3">
            <label for="billDesc">توضیحات
              <span class="text-danger">*</span>
            </label>
            <textarea class="form-control" type="text"  name="billDesc" value="" ></textarea>
          </div>
          <div class="col-12 mt-3 text-center">
           <button class="btn btn-primary" type="submit" name="button">
              <strong class="">
                ثبت پرداخت
              </strong>
            </button>
          </div>
          
        </form>
        </div>
       
      </div>
    </div>
  </div>
</div>







{# Order Product #}
{% for order in orders %}

<!-- Order details modal -->
<div class="modal fade orderDetail" id="order{{order.id}}">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header bg-success justify-content-start pb-0">
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
        <p class="heading lead"> 
          مشخصات سفارش
          {{order.fullName}}
        </p>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-center ">
        <table  class="table pt-2 pb-2 text-center">
          <tbody>
            <tr class="text-center">
              <th>نام و نام خانوادگی</th>
              <th>شماره موبایل</th>
              <th>شماره تلفن</th>
              <th>کد ارسالی</th>
              <th>استان</th>
              <th>شهر</th>
            </tr>
            <tr>
              <td>{{order.fullName}}</td>
              <td>{{order.mobile}}</td>
              <td>{{order.telephone}}</td>
              <td>-</td>
              <td>{{order.state.name}}</td>
              <td>{{order.city.name}}</td>
            </tr>
            <tr class="text-center">
              <th>کد پستی</th>
              <th>کد پیگیری</th>
              <th>مبلغ مشارکت پایه</th>
            </tr>
            <tr>
              <td>{{ order.postalCode }}</td>
              <td>{{ order.trackingCode }}</td>
              <td>
                    <span>
                      {{'داخل شهر:'}}
                      {{user.internalPrice}}
                    </span>/
                    <span>
                      {{'حومه شهر:'}}
                      {{user.locallyPrice}}
                      </span>/
                    <span>
                      {{'روستا:'}}
                      {{user.villagePrice}}
                    </span>

              </td>
            </tr>
          </tbody>
        </table>
        <strong>آدرس:</strong>
        {{order.address}}
        <hr>
        <table  class="table pt-2 pb-2 text-center">
          <tbody>
            <tr class="text-center">
              <th>محصول</th>
              <th>نوع</th>
              <th>مبلغ</th>
              <th>تعداد</th>
              <th>تخفیف</th>
              <th>مبلغ مشارکت ویژه</th>
              <th>جمع</th>
            </tr>
            {% for item in order.products %}
              <tr class="text-center">

                <td>{{ item.product.name }}</td>
                {% if item.type is null %}
                  <td>{{ 'ندارد' }}</td>
                {% else %}
                  <td>{{ item.type }}</td>
                {% endif %}
                <td>{{ item.product.price }}</td>
                <td>{{ item.count }}</td>
                <td>{{ item.off }}</td>
                <td>
                  {% for share in user.tariffs %}

                    {% if share.product_id == item.product.id %}
                      {% if share.place == "internal" %}
                        {{'داخل شهر'}}
                      {% elseif share.place == "suburb" %}
                        {{'حومه شهر'}}
                      {% else %}
                        {{'روستا'}}
                      {% endif %}
                      {{':'}}
                      {{share.price | number_format}}
                      {{'<br />'}}
                    {% endif %}

                  {% endfor %}

                </td>
                <td class="priceSum">{{ (item.product.price * item.count) - item.off }}</td>
                  {# <td>
                  <form  action="#" method="post" >
                      <input type="hidden" name="_token" value="{{csrf_token()}}" />
                      <input type="hidden" name="_method" value="DELETE" />
                      <input type="hidden" name="user_id" value="{{item.id}}">
                      <a href="javascript:void(0)" class="deleteSpecialTariff text-danger btn-sm" name="button">
                      <i class="far fa-trash-alt crud-icon"></i>
                    </a>
                  </form>
                </td> #}
              </tr>

            {% endfor %}

          </tbody>

        </table>
       <!-- 
        #########
        More Details
        #########
       -->
       <hr>
       <table  class="table pt-2 pb-2 text-center">
        <tbody>
          <tr class="text-center">
            <th>نوع پرداخت</th>
            <th>مبلغ پرداخت نقدی</th>
            <th>مبلغ پرداخت چکی</th>
            <th>پیش پرداخت</th>
          </tr>
          <tr class="text-center">
            {% if order.paymentMethod == "cash" %}
              <td>{{ 'نقدی' }}</td>
            {% else %}
              <td>{{ 'نقدی + چک' }}</td>
            {% endif %}
            <td>{{ order.cashPrice | number_format }}</td>
            <td>{{ order.chequePrice | number_format }}</td>
            <td>{{ order.prePayment | number_format }}</td>
          </tr>
          <tr class="text-center">
            <th>هزینه ارسال</th>
            <th>مبلغ مشارکت</th>
            <th>قابل پرداخت</th>
          </tr>
          <tr class="text-center">
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
          </tr>
        </tbody>
        </table>
        <hr>
      <table  class="table bg-white pt-2 pb-2 text-center">
      <tbody>
          <tr class="text-center">
            <th>توضیحات ارسال</th>
            <th>توضیحات فروشنده</th>
          </tr>
          
              <tr class="text-center">
                <td>{{item.sendDescription}}</td>
                <td>{{ item.sellerDescription }}</td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!--End order details modal -->
</div>
{% endfor %}
