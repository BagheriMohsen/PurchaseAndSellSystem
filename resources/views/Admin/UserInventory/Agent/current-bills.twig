{% extends 'Admin/Master/layout' %}

{% block title %}
  صورت حساب جاری
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'صورت حساب جاری'} %}
{% endblock %}

{% block content %}
<div class="container col-sm-12">
            {# item #}
            <div class="row">
              <div class="col-md-6">
                 <div class="card">
                  <div class="card-header text-center bg-info">
                   <i class="fa fa-book crud-icon"></i>
                    صورت حساب جاری شما  
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body col-12 mx-auto">
                    <table class="table table-sm text-center no-border">
                      <tr>
                          <th scope="row">مجموع کل فروش</th>
                          <th scope="col">
                            {{ AllSell | number_format }}
                            تومان
                          </th>
                      </tr>
                      <tr>
                        <th scope="row">مجموع واریزی</th>
                        <th scope="col">
                            {{ TotalSettle | number_format }}
                            تومان
                        </th>
                      </tr>
                      {# <tr>
                          <th scope="row">هزینه حمل</th>
                          <td>10000</td>
                      </tr> #}
                      {# <tr>
                          <th scope="row">مجموع چک ها</th>
                          <td>10000</td>
                      </tr> #}
                      {# <tr>
                          <th scope="row">مجموع چک های تایید شده</th>
                          <td>10000</td>
                      </tr> #}
                      {# <tr>
                          <th scope="row">مجموع پرداختی</th>
                          <td>10000</td>
                      </tr> #}
                      <tr>
                          <th scope="row">مجموع مبلغ مشارکت</th>
                          <th scope="col">
                              {{ AllSpecialShared | number_format }}
                              تومان
                          </th>
                      </tr>
                      
                      
                  

                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
              </div>
              <div class="col-md-6">
                <div class="card">
                  <div class="card-header text-center bg-info">
                  <i class="fas fa-money-check-alt"></i>
                    مبلغ بدهی شما
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body col-12 mx-auto">
                    <table class="table table-sm text-center no-border">
                      <tr>
                        <th scope="row">جایزه</th>
                        <td>
                          {{ user.gift | number_format }}
                          تومان
                        </td>
                      </tr>
                      {# <tr>
                          <th scope="row">امتیاز</th>
                          <td>10000</td>
                      </tr> #}
                      <tr>
                          <th scope="row">مجموع بدهی شما</th>
                          <td>
                            {% set AllDebtor = AllSell - TotalSettle - AllSpecialShared %}
                            {{ AllDebtor | number_format}}
                            تومان
                          </td>
                      </tr>
                      {# <tr>
                          <th scope="row">بدهی چکی شما</th>
                          <td>10000</td>
                      </tr>
                      <tr>
                          <th scope="row">بدهی نقدی شما</th>
                          <td>10000</td>
                      </tr> #}
                      <tr>
                        <th scope="row">مانده حساب</th>
                        <td>
                          {% set balance = AllDebtor - user.gift %}
                          {{ balance | number_format }}
                          تومان
                        </td>
                      </tr>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
              </div>
            </div>
          </div>







          <div class="row">
            <div class="card col-sm-12 p-3">
          
                <div class="p-2 text-center">
                  <strong>
                    تراکنش شما در 30 روز گذشته
                  </strong>
                </div>
                <table   class="table table-striped table-bordered table-sm text-center" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>ردیف</th>
                      <th>تاریخ</th>
                      <th>عنوان</th>
                      <th>بدهکار</th>
                      <th>بستانکار</th>
                      <th>مشارکت</th>
                      <th>مانده</th>
                    </tr>
                  </thead>
                  <tbody>
                  {# {% for order in orders %} #}
               
                    <tr>
                     
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>


                      
                    </tr>
                 
                    {# {% endfor %} #}
                  </tbody>
                </table>
              </div>
            </div>
          </div>













{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}