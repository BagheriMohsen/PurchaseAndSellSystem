{% extends 'Admin/Master/layout' %}

{% block title %}
  مالی
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'مالی'} %}
{% endblock %}

{% block content %}



<form id="costReportForm" action="{{route('report.AgentReportPayment')}}" method="post" class="row pt-2 pb-2">
    
    <input type="hidden" name="_token" value="{{csrf_token()}}">

    <div class="col-sm-3 mx-auto">
        <label for="from">از تاریخ</label>
        <input class="form-control persianDatePicker" type="text">
        <input class="georgian_date" type="hidden" name="from">
    </div>
    <div class="col-sm-3 mx-auto">
        <label for="to">تا تاریخ</label>
        <input class="form-control persianDatePicker" type="text">
        <input class="georgian_date" type="hidden" name="to">
    </div>
    <div class="col-sm-4 mx-auto">
        <h6 class="col-12">نوع تاریخ</h6>
        <!-- Group of default radios - option 1 -->
        <div class="custom-control custom-radio">
          <input value="{{ null }}" name="status" type="radio" class="custom-control-input" id="defaultGroupExample1" checked>
          <label class="custom-control-label" for="defaultGroupExample1">صورت حساب مالی</label>
        </div>
  
        <!-- Group of default radios - option 2 -->
        <div class="custom-control custom-radio">
          <input value="2" name="status" type="radio" class="custom-control-input" id="defaultGroupExample2" >
          <label class="custom-control-label" for="defaultGroupExample2">پرداخت‌ها</label>
        </div>
  
        <!-- Group of default radios - option 3 -->
        <div class="custom-control custom-radio">
          <input value="5" name="status" type="radio" class="custom-control-input" id="defaultGroupExample3" >
          <label class="custom-control-label" for="defaultGroupExample3">هزینه‌ها</label>
        </div>
        <!-- Group of default radios - option 3 -->
        <div class="custom-control custom-radio">
          <input value="7" name="status" type="radio" class="custom-control-input" id="defaultGroupExample4" >
          <label class="custom-control-label" for="defaultGroupExample4">عودت وجه</label>
        </div>
      </div>

    <div class="col-sm-12 mt-5">
        
        <button class="btn btn-success btn-sm text-dark">
            <strong class="h6">
                مشاهده
            </strong>
        </button>
    </div>
</form>


{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}