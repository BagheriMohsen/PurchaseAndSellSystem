{% extends 'Admin/Master/layout' %}

{% block title %}
  گزارش
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'گزارش'} %}
{% endblock %}

{% block content %}

{% include 'Messages/message' %}
{% include 'Messages/info' %}


<div class="row">
  <div class="card col-sm-12 p-3">

      

      <table   class="table table-striped table-bordered table-sm text-center" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>تاریخ</th>
              <th>مبلغ-تومان</th>
              <th>کد</th>
              <th>وضعیت</th>
              <th>نوع پرداخت </th>
            </tr>
          </thead>
        <tbody>
          {# {% for order in orders %} #}
          {% for cost in costs %}
            <tr>
              <td class="justDate">{{cost.billDate}}</td>
              <td>{{ cost.bill | number_format }}</td>
              <td>{{ cost.trackingCode }}</td>
              {% if status == 2 or status == 5 or status == 11 or status == 8 %}
                <td>{{ "تایید شده" }}</td>
              {% else %}
                <td class="text-danger">{{ "تایید نشده" }}</td>
              {% endif %}
              <td>{{ "ثبت فیش" }}</td>
            </tr>
            {% endfor %}
            {# {% endfor %} #}
        </tbody>
      </table>
      <div class="col-12">

    </div>
    </div>
  </div>
</div>











{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}