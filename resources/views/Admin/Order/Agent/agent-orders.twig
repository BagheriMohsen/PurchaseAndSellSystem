{% extends 'Admin/Master/layout' %}

{% block title %}
   سفارشات در انتظار تحویل
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':' سفارشات در انتظار تحویل'} %}
{% endblock %}

{% block content %}

  {% include 'Messages/switchSuccess' %}
  {% set user = auth_user() %}
  <div class="row">
   
    <div class="card col-sm-12">
     
                <div class="card-header">
                  {# <a class="col-3 btn btn-warning btn-sm" href="#">
                    <strong class="h6 text-dark">
                      برگشت به مدیر پیگیری
                    </strong>
                  </a> #}

                  
                </div>
                <!-- /.card-header -->
                <div class="card-body col-12 mx-auto">
                
                  <table  id="orderTable" class="table table-striped table-bordered table-sm text-center" cellspacing="0"
                width="100%">
                    <thead>
                    <tr>
                      <th></th>
                      <th>شماره<br> سفارش</th>
                      <th>تاریخ ثبت</th>
                      <th>تاریخ تخصیص</th>
                      <th>استان-شهر</th>
                      <th>کد پستی</th>
                      <th>نام خریدار</th>
                      <th>همراه-ثابت</th>
                      <th>نوع پرداخت</th>
                      <th>کالسنتر</th>
                      <th>عملیات</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                      <tr>
                        <td></td>
                        <td>{{order.id}}</td>
                        <td class="timestamp">{{order.created_at | date('Y-m-d')}}</td>
                        <td>{{'-'}}</td>
                        <td>{{order.state.name}}{{'-'}}{{order.city.name}}</td>
                        <td>{{order.postalCode}}</td>
                        <td>{{order.fullName}}</td>
                        <td>{{order.mobile}}<br>{{order.telephone}}</td>
                        {% if order.paymentMethod == 'cash' %}
                          <td>{{'نقدی'}}</td>
                        {% else %}
                          <td>{{'غیر نقدی'}}</td>
                        {% endif %}
                        <td>{{''}}</td>
                        <td>
                          <a title="جزئیات این سفارش" class="text-secondary" data-toggle="modal" href="#order{{order.id}}">
                            <sub class="text-dark">
                              {{order.products.count()}}
                            </sub>
                            <i class="fas fa-shopping-basket crud-icon"></i>
                          </a>
                          <a title="فاکتور" class="text-secondary" href="#">
                            <i class="fa fa-book crud-icon"></i>
                          </a>
                          <a title="تعیین وضعیت" class="text-secondary" data-toggle="modal" href="#condition">
                              <i class="fa fa-cogs crud-icon"></i>
                          </a>
                          {# <a  title="ویرایش" class="text-warning mx-auto"
                            href="#">
                            <i class="far fa-edit crud-icon"></i>
                          </a> #}
                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                    
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
          </div>

      <div class="row">
        <div class="col-6">
          <form class="" action="{{route('orders.AgentChangeOrderStatus')}}" id="conditionForm">
            <input type="hidden" name="_token" value="{{csrf_token()}}" />
            <label for="status">
              تعیین وضعیت تحویل
              <span class="text-danger">*</span>
            </label>
            <select class="p-2 pb-2 form-control col-sm-6" name="status">
              <option value="">گزینه ای انتخاب نشده</option>
              {% for bot_status in bottom_statuses %}
                <option value="{{bot_status.id}}">{{bot_status.name}}</option>
              {% endfor %}
         
            </select>
            <button class="col-sm-6  btn btn-success btn-sm mx-auto" type="submit" name="button">
              <strong class="h6">
                ذخیره
              </strong>
            </button>
          </form>
          <hr>
          <form class="" action="" method="post" id="toFollowManagerForm">
              <button class="col-sm-6  btn btn-primary btn-sm mx-auto" type="submit" name="button">
                <strong class="h6">
                  برگشت به مدیر پیگیری
                </strong>
              </button>
          </form>
        </div>
         <div class="col-6">
            <button class="btn btn-info btn-sm mx-auto" type="button" name="button">
                <strong class="h6">
                  چاپ
                </strong>
            </button>
            <button class="btn btn-secondary btn-sm mx-auto" type="button" name="button">
                <strong class="h6">
                  اکسل
                </strong>
            </button>
         </div>
        
      </div>
     

          
{# Order Product #}
{% for order in orders %}

<!-- Order details modal -->
<div class="modal fade orderDetail" id="order{{order.id}}">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header bg-success justify-content-start pb-0">
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
        <p class="heading lead"> 
          مشخصات سفارش
          {{order.fullName}}
        </p>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-center ">
        <table  class="table pt-2 pb-2 text-center">
          <tbody>
            <tr class="text-center">
              <th>نام و نام خانوادگی</th>
              <th>شماره موبایل</th>
              <th>شماره تلفن</th>
              <th>کد ارسالی</th>
              <th>استان</th>
              <th>شهر</th>
            </tr>
            <tr>
              <td>{{order.fullName}}</td>
              <td>{{order.mobile}}</td>
              <td>{{order.telephone}}</td>
              <td>-</td>
              <td>{{order.state.name}}</td>
              <td>{{order.city.name}}</td>
            </tr>
            <tr class="text-center">
              <th>کد پستی</th>
              <th>کد پیگیری</th>
              <th>مبلغ مشارکت پایه</th>
              <th colspan="3">آدرس</th>
            </tr>
            <tr>
              <td>{{ order.postalCode }}</td>
              <td>{{ order.trackingCode }}</td>
              <td>
                    <p>
                      {{'داخل شهر:'}}
                      {{user.internalPrice}}
                    </p>
                    <p>
                      {{'حومه شهر:'}}
                      {{user.locallyPrice}}
                      </p>
                    <p>
                      {{'روستا:'}}
                      {{user.villagePrice}}
                    </p>

              </td>
              <td colspan="3">{{order.address}}</td>
            </tr>
          </tbody>
        </table>
        <hr>
        <table  class="table pt-2 pb-2 text-center">
          <tbody>
            <tr class="text-center">
              <th>محصول</th>
              <th>نوع</th>
              <th>مبلغ</th>
              <th>تعداد</th>
              <th>تخفیف</th>
              <th>مبلغ مشارکت ویژه</th>
              <th>جمع</th>
            </tr>
            {% for item in order.products %}
              <tr class="text-center">

                <td>{{ item.product.name }}</td>
                {% if item.type is null %}
                  <td>{{ 'ندارد' }}</td>
                {% else %}
                  <td>{{ item.type }}</td>
                {% endif %}
                <td>{{ item.product.price }}</td>
                <td>{{ item.count }}</td>
                <td>{{ item.off }}</td>
                <td>
                  {% for share in user.tariffs %}

                    {% if share.product_id == item.product.id %}
                      {% if share.place == "internal" %}
                        {{'داخل شهر'}}
                      {% elseif share.place == "suburb" %}
                        {{'حومه شهر'}}
                      {% else %}
                        {{'روستا'}}
                      {% endif %}
                      {{':'}}
                      {{share.price | number_format}}
                      {{'<br />'}}
                    {% endif %}

                  {% endfor %}

                </td>
                <td class="priceSum">{{ (item.product.price * item.count) - item.off }}</td>
                  {# <td>
                  <form  action="#" method="post" >
                      <input type="hidden" name="_token" value="{{csrf_token()}}" />
                      <input type="hidden" name="_method" value="DELETE" />
                      <input type="hidden" name="user_id" value="{{item.id}}">
                      <a href="javascript:void(0)" class="deleteSpecialTariff text-danger btn-sm" name="button">
                      <i class="far fa-trash-alt crud-icon"></i>
                    </a>
                  </form>
                </td> #}
              </tr>

            {% endfor %}

          </tbody>

        </table>
       <!-- 
        #########
        More Details
        #########
       -->
       <hr>
       <table  class="table pt-2 pb-2 text-center">
        <tbody>
          <tr class="text-center">
            <th>نوع پرداخت</th>
            <th>مبلغ پرداخت نقدی</th>
            <th>مبلغ پرداخت چکی</th>
            <th>پیش پرداخت</th>
          </tr>
          <tr class="text-center">
            {% if order.paymentMethod == "cash" %}
              <td>{{ 'نقدی' }}</td>
            {% else %}
              <td>{{ 'نقدی + چک' }}</td>
            {% endif %}
            <td>{{ order.cashPrice | number_format }}</td>
            <td>{{ order.chequePrice | number_format }}</td>
            <td>{{ order.prePayment | number_format }}</td>
          </tr>
          <tr class="text-center">
            <th>هزینه ارسال</th>
            <th>مبلغ مشارکت</th>
            <th>قابل پرداخت</th>
          </tr>
          <tr class="text-center">
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
            <td>{{ '-' }}</td>
          </tr>
        </tbody>
        </table>
        <hr>
      <table  class="table bg-white pt-2 pb-2 text-center">
      <tbody>
          <tr class="text-center">
            <th>توضیحات ارسال</th>
            <th>توضیحات فروشنده</th>
          </tr>
          
              <tr class="text-center">
                <td>{{item.sendDescription}}</td>
                <td>{{ item.sellerDescription }}</td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!--End order details modal -->
</div>
{% endfor %}
{# Order Product #}

<!-- Order condition modal -->
<div class="modal fade" id="condition">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header bg-success justify-content-start pb-0">
        <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" class="white-text">&times;</span>
        </button>
        <p class="heading lead"> 
         تعیین وضعیت
        </p>
      </div>

      <!-- Modal body -->
      <div class="modal-body text-center ">
        <form action="#" method="post" class="conditionForm">
          <div class="row">
            <div class="col-6 text-right">
              <h6>انتخاب حالات دیگر:</h6>
              <div class="form-check">
                <input type="radio" class="form-check-input" class="waitingDelivery" value="1" name="condition" checked>
                <label class="form-check-label" for="waitingDelivery">در انتظار تحویل</label>
              </div>
              <div class="form-check">
                <input type="radio" class="form-check-input" class="suspend" value="2" name="condition" >
                <label class="form-check-label" for="suspend">معلق</label>
              </div>
              <div class="form-check">
                <input type="radio" class="form-check-input" class="cancel" value="3" name="condition">
                <label class="form-check-label" for="cancel">کنسلی</label>
              </div>
            </div>
            <div class="col-6 text-right">
              <div class="waitingDeliveryField">
                <label for="waitingDeliveryDesc">توضیحات:</label>
                <textarea rows="10" cols="50" class="form-control" type="text"  name="waitingDeliveryDesc" value="" placeholder="توضیحات وضعیت سفارش"></textarea>
              </div>
              <div class="suspendField d-none">
                <h6>انتخاب حالت تماس مجدد:</h6>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="suspend" checked>
                  <label class="form-check-label">عدم پاسخگویی</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="suspend" >
                  <label class="form-check-label">خارج از دسترس</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" value="3" name="suspend">
                  <label class="form-check-label">زمان سررسید</label>
                </div>
                <div class="dueDateFuild d-none">
                  <label>تاریخ: </label>
                  <input type="text" class="form-control persianDateTimepicker">
                </div>
              </div>
              <div class="cancelField d-none">
                <h6>انتخاب حالت انصراف :</h6>
                 <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel" checked>
                  <label class="form-check-label">قیمت بالا</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel" >
                  <label class="form-check-label">کیفیت پایین</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel">
                  <label class="form-check-label">ناکارآمد بودن </label>
                </div>
                 <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel">
                  <label class="form-check-label">برآورده نکردن خواسته ها </label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel" >
                  <label class="form-check-label">  مزاحمت</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel">
                  <label class="form-check-label">تماس دیروقت </label>
                </div>
                 <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel">
                  <label class="form-check-label"> خرید از مکان دیگر</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" name="cancel" >
                  <label class="form-check-label">ثبت اطلاعات نامعتبر (فروشنده)  </label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" value="9" name="cancel">
                  <label class="form-check-label">توضیحات </label>
                </div>
                <div class="cancelDescField d-none">
                   <label for="cancelDesc">توضیحات:</label>
                    <textarea rows="10" cols="50" class="form-control " type="text"  name="cancelDesc" value="" placeholder="توضیحات دلیل کنسلی"></textarea>
                </div>
              </div>
            </div>
            <div class="col-12 text-center mt-5">
              <button class="btn btn-success" type="submit" name="button">
                <strong class="h6 text-dark">
                  اعمال
                </strong>
              </button>
            </div>
          </div>
        </from>
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}

