                <i class="fas fa-pencil-alt prefix text-dark"></i>
                <textarea name="description" id="form10" class="md-textarea form-control" rows="2" cols="80"></textarea>
                <label for="form10">توضیحات</label>
            </div>
            {# description #}
            <div class="col-sm-5 mt-5 mx-auto">
                <label for="product">وضعیت</label>
                <select class="form-control" name="status">
                    <option value="{{'خرابی'}}">{{'خرابی'}}</option>
                    <option value="{{'اسقاط'}}">{{'اسقاط'}}</option>
                </select>
            </div>
            <div class="col-sm-5 mt-5 mx-auto">
                <button class="btn btn-sm btn-success">
                    <strong class="h6 text-dark">
                        ذخیره
                    </strong>
                </button>
            </div>
        </form>

    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

        <form id="warehouseToTankhah" action="{{route('storeRooms.storageChange')}}" method="post">
            <input type="hidden"    name="_token" value="{{csrf_token()}}" />
            <input type="hidden"    name="in_out" value="{{'sendToFund'}}" />
         

            <div class="col-sm-5 mt-5 mx-auto">
                <label for="product">محصول</label>
                <select class="form-control" name="product">
                    <option value="{{null}}">محصول را انتخاب کنید</option>
                {% for product in products %}
                    <option value="{{product.id}}">{{product.name}}</option>
                {% endfor %}
                </select>
            </div>
            {# number #}
            <div class="md-form col-sm-5 mt-5 mx-auto">
                <input type="number" id="inputIconEx5" class="form-control" name="number" value="">
                <label for="inputIconEx5">تعداد</label>
                <span class="text-secondary">
                    ارزش به تومان:
                    <span class="cargoValue">0</span>
