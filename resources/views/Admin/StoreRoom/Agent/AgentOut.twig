{% extends 'Admin/Master/layout' %}

{% block title %}
  خروجی انبار 
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'خروجی انبار'} %}
{% endblock %}

{% block content %}

    {% include 'Messages/message' %}

    <table  id="agentOutTable" class="table table-striped table-bordered table-sm" cellspacing="0"
        width="100%">
          <thead>
          <tr class="text-center">
            <th>تصویر</th>
            <th>کالا</th>
            <th>انبار مقصد</th>
            <th>وضعیت</th>
            <th>توضیحات</th>
            <th>تعداد</th>
            <th>تاریخ ارسال</th>
            {# <th>تاریخ دریافت</th> #}
            <th >جمع(تومان)</th>
          </tr>
          </thead>
          <tbody>
          {% for storeRoom in storeRooms %}
            <tr class="text-center">
              <td><img src="{{storeRoom.product.thumbUrl}}" /></td>
              <td>{{storeRoom.product.name}}</td>
              {% if storeRoom.receiver_id == 2 %}
                <td>{{'انبار تنخواه'}}</td>
              {% else %}
                <td>{{storeRoom.receiver.name}}{{' '}}{{storeRoom.receiver.family}}</td>
              {% endif %}
              <td>{{storeRoom.status}}</td>
              <td>{{storeRoom.description}}</td>
              <td>{{storeRoom.number}}</td>
              <td class="">{{storeRoom.out_date | date('Y/m/d')}}</td>
              {# {% if storeRoom.in_date is null  %}
                <td class="text-danger">{{'تایید نشده'}}</td>
              {% else %}
                <td class="justDate">{{storeRoom.in_date | date('Y/m/d')}}</td>
              {% endif %} #}


              {% set price = storeRoom.product.price * storeRoom.number %}
              <td>{{ price|number_format}}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>

                
                
{% endblock %}

{% block footer %}
    {% include 'Admin/Master/footer' %}
{% endblock %}