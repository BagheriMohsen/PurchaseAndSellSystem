{% extends 'Admin/Master/layout' %}

{% block title %}
  موجودی انبار
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'موجودی انبار'} %}
{% endblock %}

{% block content %}

    {% include 'Messages/message' %}

        <div class="alert alert-primary" role="alert">
            {# <a style="float:left" type="button" class="btn btn-dark btn-sm" data-dismiss="alert" aria-label="Close">
              <strong class="h6 text-light">
                فهمیدم
              </strong>
          </a> #}
          <h4 class="alert-heading">
          <i class="fas fa-exclamation"></i>
          اطلاعات
          </h4>
          <hr>
             <p class="mb-0">
              {{ allProduct }}
              عدد محصول در این انبار موجود است
            </p>
            {# <p class="mb-0">
              مجموع ارزش این انبار 
              {{ cost|number_format }}
              تومان است
            </p> #}
            
        </div>
    <table  id="storeRoomTable" class="table table-striped table-bordered table-sm" cellspacing="0"
                width="100%">
                  <thead>
                  <tr class="text-center">
                    <th>تصویر</th>
                    <th>کالا</th>
                    {# <th>وضعیت</th> #}
                    <th>قیمت</th>
                    <th>تعداد</th>
                    <th >جمع(تومان)</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for storage in storages %}
                    <tr class="text-center">
                      <td><img src="{{storage.product.thumbUrl}}" /></td>
                      <td>{{storage.product.name}}</td>
                      {# <td>{{storage.status}}</td> #}
                      <td>{{storage.product.price | number_format}}</td>
                      <td>{{storage.number}} </td>
                      {% set price = storage.product.price * storage.number %}
                      <td>{{ price|number_format}}</td>
                    </tr>
                  {% endfor %}
                  </tbody>

                </table>

                
                
{% endblock %}

{% block footer %}
    {% include 'Admin/Master/footer' %}
{% endblock %}