{% extends 'Admin/Master/layout' %}

{% block title %}
  کاربران
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' with {'title':'کاربران'} %}
{% endblock %}

{% block content %}

                <table  id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
                width="100%">
                  <thead>
                  <tr class="text-center">
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>نقش</th>
                    <th>شهر-استان</th>
                    <th >وضعیت</th>
                    <th >عملیات</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for user in users %}
                    <tr class="text-center">
                      <td>{{user.name}}</td>
                      <td>{{user.family}}</td>
                      <td>
                      {% set role = user.getRoleNames().first() %}
                      {% if role == 'admin' %}
                      
                          {{ 'ادمین سایت' }}
                          
                        {% elseif role == "user" %}

                          {{ 'کاربر عادی' }}

                        {% elseif role == "seller" %}

                          {{ 'فروشنده' }}

                        {% elseif role == "mainWarehouser" %}

                          {{ 'انبار مادر' }}

                        {% elseif role == "fundWarehouser" %}

                          {{ 'انبار تنخواه' }}

                        {% elseif role == "agent" %}

                          {{ 'نماینده' }}

                        {% elseif role == "agentChief" %}

                          {{ 'مدیر نماینده' }}

                        {% elseif role == "followUpManager" %}

                          {{ 'مدیر پیگیری' }}

                        {% else %}

                          {{ 'نقش خاصی پیدا نشد' }}
                          
                      {% endif %}
                      </td>
                      <td>{{user.state.name}}</td>
                      {% if user.status != null %}
                      <td class="text-success">  {{'فعال'}} </td>
                      {% else %}
                      <td class="text-danger ">   {{'غیر فعال'}} </td>
                      {% endif %}
                      <td class="d-flex justify-content-between">
                      
                        {# {% if role == "agent" or role == "agentChief" %}
                          <a  style="pointer-events: none;cursor: default;" title="مشارکت" class="text-success " 
                            href="#">
                            <i class="fas fa-plus crud-icon"></i>
                          </a>
                        {% endif %} #}
                        
                        <a  title="ویرایش" class="text-warning " 
                          href="{{route('users.edit',user.id)}}">
                          <i class="far fa-edit crud-icon"></i>
                        </a>

                        {# Form Delete #}
                          <form action="{{route('users.destroy',user.id)}}" id="formForDelete"  method="POST">
                              <input type="hidden" name="_token" value="{{ csrf_token() }}" />
                              <input type="hidden" name="_method" value="DELETE" />
                            <a title="حذف" href="javascript:{}" 
                              onclick="document.getElementById('formForDelete').submit();" >
                              <i class="far fa-trash-alt text-danger crud-icon"></i>
                            </a>
                          </form>
                        {# Form Delete #}

                        <a title="ورود به اکانت" class="text-primary " 
                            href="{{ route('users.switchAccount',user.id) }}">
                            <i class="fas fa-sign-in-alt crud-icon"></i>
                        </a>
                      </td>
                    </tr>
                {% endfor %}
                  </tbody>

                </table>


{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}
