{% extends 'Admin/Master/layout' %}

{% block title %}
  کاربران
{% endblock %}

{% block header %}
  {% include 'Admin/Master/header' %}
{% endblock %}

{% block sidebar %}
  {% include 'Admin/Master/sidebar' %}
{% endblock %}

{% block path %}
  {% include 'Admin/Master/path' %}
{% endblock %}

{% block content %}

                <table  id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
                width="100%">
                  <thead>
                  <tr class="text-center">
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>نقش</th>
                    <th>شهر-استان</th>
                    <th >وضعیت</th>
                    <th >عملیات</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for user in users %}
                    <tr class="text-center">
                      <td>{{user.name}}</td>
                      <td>{{user.family}}</td>
                      <td>
                      {% set roles = user.getRoleNames().first() %}
                      {% if roles == 'admin' %}
                      
                          {{ 'ادمین سایت' }}
                          
                        {% elseif roles == "user" %}

                          {{ 'کاربر عادی' }}

                        {% elseif roles == "seller" %}

                          {{ 'فروشنده' }}

                        {% elseif roles == "warehouser" %}

                          {{ 'انباردار' }}

                        {% elseif roles == "agent" %}

                          {{ 'نماینده' }}

                        {% elseif roles == "agentChief" %}

                          {{ 'مدیر نماینده' }}

                        {% elseif roles == "followUpManager" %}

                          {{ 'مدیر پیگیری' }}

                        {% else %}

                          {{ 'نقش خاصی پیدا نشد' }}
                          
                      {% endif %}
                      </td>
                      <td>{{user.state.name}}</td>
                      {% if user.status != null %}
                      <td class="text-success">  {{'فعال'}} </td>
                      {% else %}
                      <td class="text-danger ">   {{'غیر فعال'}} </td>
                      {% endif %}
                      <td class="text-center">
                        {# {% if $user->role->role === 'agent' || $user->role->role === 'agentChief' %} #}
                          <a  class="text-success " href="#">
                            <i class="fas fa-plus crud-icon"></i>
                          </a>
                        {# {% endif %} #}
                        <a  class="text-warning " href="{{route('users.edit',user.id)}}">
                          <i class="far fa-edit crud-icon"></i>
                        </a>
                        <a class="text-danger " href="#">
                            <i class="far fa-trash-alt crud-icon"></i>
                        </a>
                      </td>
                    </tr>
                {% endfor %}
                  </tbody>

                </table>


{% endblock %}

{% block footer %}
  {% include 'Admin/Master/footer' %}
{% endblock %}
